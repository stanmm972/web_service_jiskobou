<div class="container">
    <div class="row">
        <h2>Create a message</h2>
        <%= simple_form_for(@message) do |f| %>
          <%= f.input :title %>
          <%= f.input :body %>
          <%= f.submit %>
        <% end %>
    </div>
        <%= link_to "Back", messages_path, :class => "btn btn-secondary" %>
</div>