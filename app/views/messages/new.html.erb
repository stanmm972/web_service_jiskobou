<div class="container py-2">
  <h1 class="alert alert-primary text-center">Message</h1>
  <%= simple_form_for [@user, @message] do |f| %>
      <%= f.input :title %>
      <%= f.input :body %>
      <%= f.input :document, as: :file%>
      <%= f.submit "Send message", class:"btn btn-primary" %>
  <% end %>
</div>