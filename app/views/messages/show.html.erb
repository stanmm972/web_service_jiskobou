<div class="container">
    <h2>Message</h2>
    
    Title: <%= @message.title %>
    <br>
    Description: <%= @message.body %>
    <br>
    User: <%= @message.user.email %>
    <br>
    Pdf: <%= link_to "pdf", @message.documents.key %>
    <br>
    <%= link_to "Back", messages_path, :class => "btn btn-secondary" %> | 
    <%= link_to "Edit", edit_message_path, :class => "btn btn-warning" %> |
    <%= link_to "Delete", @message, method: :delete, data: {confirm: "Are you sure!?"}, :class => "btn btn-danger" %>
</div>