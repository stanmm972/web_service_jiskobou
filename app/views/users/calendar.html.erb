<div class="container">
    <h2 class="text-center"><%= current_user.first_name %>'s calendar</h2>
    <div class="jumbotron">
        <%= month_calendar(events: @jobs) do |date, jobs| %>
          <div class="day">
            <%= date.day %>
          </div>
            <% jobs.each do |job| %>
                <% if current_user.id == job.user_id %>
                <div class="card">
                    <div class="card-body">      
                        <h4 class="card-title"><%= link_to job.title, job %></h4>  
                        <p class="card-text">From: <%= job.start_time.strftime('%A, %B %d, %Y at %I:%M %p') %></p>
                        <p class="card-text">To: <%= job.end_time.strftime('%A, %B %d, %Y at %I:%M %p') %></p>
                        <p class="card-text">Assigned to: <%= job.user_full_name %></p>                
                    </div>
                </div>
                <% end %>
            <% end %>
        <% end %>
    </div>
</div>

