<div class="container">
  <h2>Create a job</h2>
  <%= simple_form_for(@job) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
  
  <div class="form-inputs">
        <%= f.input :title %>
        <br>
        <%= f.input :description %>
        <br>
        <%= f.input :start_time %>
        <br>
        <%= f.input :end_time %>
        <br>
        <%= f.input :status_type, :collection => ([['Available', 'Available'], ['Unavailable', 'Unavailable']]) %>
        <br>
        <%= f.association :user %>
        <br>
  </div>
  
  <div class="form-actions">
    <hr>
    <%= f.button :submit, class: "btn btn-success" %>
  </div>
  <% end %>
</div>
</div>