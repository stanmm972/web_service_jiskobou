<div class="container">
    <h2>Create a new job</h2>

    <%= simple_form_for(@job) do |f| %>
      <%= f.input :title %>
      <br>
      <%= f.input :description %>
      <br>
      <%= f.input :start_time %>
      <br>
      <%= f.input :end_time %>
      <br>
      <%= f.input :status_type, :collection => ([['Available', 'Available'], ['Unavailable', 'Unavailable']]) %>
      <br>
      <%= f.button :submit, class: "btn-primary" %>
    <% end %>
    <br>
    <%= link_to "Back", jobs_path, :class => "btn btn-secondary" %>
</div>